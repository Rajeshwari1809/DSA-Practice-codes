package com.app.arrays;

import java.util.Scanner;

public class TwoDArray {

	public static void main(String[] args) {
		Scanner sc=new Scanner (System.in);
		
		System.out.println("enter size of row and column");
		//input of row and col size
		int row=sc.nextInt();
		int col=sc.nextInt();
		 
		//declaring 2 D array
		int marks[][]=new int[row][col];
		
		//input for elements
		for(int i=0;i<row;i++)
		{
			for(int j=0;j<col;j++)
			{
				marks[i][j]=sc.nextInt();
			}
		}
		
		
		//output 
		for(int i=0;i<row;i++)
		{
			for(int j=0;j<col;j++)
			{
				System.out.print(marks[i][j]);
			}
			System.out.println();
			
		}
		
		
		
		
		//find element by index and return inde of element
		System.out.println("enter element to search");
		int num=sc.nextInt();
		
		for(int i=0;i<row;i++)
		{
			for(int j=0;j<col;j++)
			{
				if(marks[i][j]==num)
				{
					System.out.println(i + " " + j);
				}
			}
			
			
		}
		
		
		
		
		
		
		
		
		

	}

}
